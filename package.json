{
  "name": "hypertube",
  "version": "1.0.0",
  "description": "This project's goal is to create a web application that allows the user to research and watch videos. The player is directly integrated to the website and the videos are downloaded through the BitTorrent protocol. Once the element is selected, it is downloaded from the server and streamed on the web player at the same time ; which means that the player isn't only showing the video once the download is completed, but is able to stream directly into to video feed.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon server/server.js",
    "dev": "concurrently \"nodemon server/server.js\" \"npm start --prefix client\"",
    "client-install": "cd client && npm install",
    "server": "nodemon server.js",
    "client": "npm start --prefix client"
  },
